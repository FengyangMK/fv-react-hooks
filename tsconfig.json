{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["DOM", "ESNext"],
        "allowJs": false,
        "module": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "experimentalDecorators": true,
        "moduleResolution": "bundler",
        "paths": {
            "@fv-react-hooks/*": ["./packages/*/src"]
        }
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Base"
}
